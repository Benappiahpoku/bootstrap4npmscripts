{
  "name": "bootstraptemplate",
  "version": "1.0.0",
  "description": "bootstrap starter template",
  "main": "gulpfile.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Benappiahpoku/bootstraptemplate.git"
  },
  "keywords": [
    "starter",
    "template"
  ],
  "author": "Benjamin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Benappiahpoku/bootstraptemplate/issues"
  },
  "homepage": "https://github.com/Benappiahpoku/bootstraptemplate#readme",
  "dependencies": {
    "bootstrap": "^4.4.1",
    "imagemin-cli": "^5.1.0",
    "jquery": "^3.5.0",
    "onchange": "^7.0.2",
    "popper.js": "^1.16.1",
    "tether": "^1.4.7"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.6",
    "clean-css-cli": "^4.3.0",
    "cssnano": "^4.1.10",
    "node-sass": "^4.14.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile": "node-sass --output-style expanded --source-map=true  -o dist/css src/scss",
    "imagemin": "imagemin src/img/* --out-dir dist/img",
    "build": "npm run compile  && npm run imagemin",
    "watch:css": "onchange \"src/scss/*.scss\" -- npm run compile",
    "watch:images": "onchange \"src/img/*\" -- npm run imagemin",
    "watch": "npm-run-all --parallel watch:**",
    "prefix": "postcss dist/css/style.css --use=autoprefixer --map=false --output=dist/css/style.css",
    "minify": "cleancss --level=1 --source-map --source-map-inline-sources --output dist/css/style.min.css dist/css/style.css",
    "prod": "npm run compile && npm run prefix && npm run minify"
  },
  "browserslist": [
    "last 2 versions"
  ]
}
